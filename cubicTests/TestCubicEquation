package cubicTests;


import java.util.ArrayList;

import org.junit.Test;

import equation.CubicEquation;
import equation.Term;
import equation.VariableTerm;
public class TestCubicEquation {
	

	
	@Test
public	void Test1()
	{
		ArrayList<VariableTerm> terms=new ArrayList<VariableTerm>(4);
		ArrayList<Term> term123=new ArrayList<Term>();
		CubicEquation cb=new CubicEquation(term123);
		VariableTerm t1 = new VariableTerm();
		t1.setCoefficient(3);
		t1.setPower(3);
		t1.setVar('x');
		terms.add(t1);
		VariableTerm t2 = new VariableTerm();
		t2.setCoefficient(2);
		t2.setPower(2);
		t2.setVar('x');
		terms.add(t2);
		VariableTerm t3 = new VariableTerm();
		t3.setCoefficient(4);
		t3.setPower(1);
		t3.setVar('x');
		terms.add(t3);
		
	cb.addTerm(t2);
	cb.addTerm(t1);
	cb.addTerm(t3);	
	cb.solve();
	}
@Test
	public	void Test2()
	{
		ArrayList<VariableTerm> terms=new ArrayList<VariableTerm>(4);
		ArrayList<Term> term123=new ArrayList<Term>();
		CubicEquation cb=new CubicEquation(term123);
		VariableTerm t1 = new VariableTerm();
		t1.setCoefficient(-3);
		t1.setPower(2);
		t1.setVar('z');
		terms.add(t1);
		VariableTerm t2 = new VariableTerm();
		t2.setCoefficient(-1);
		t2.setPower(3);
		t2.setVar('z');
		terms.add(t2);
		VariableTerm t3 = new VariableTerm();
		t3.setCoefficient(5);
		t3.setPower(1);
		t3.setVar('z');
		terms.add(t3);
		
	cb.addTerm(t2);
	cb.addTerm(t1);
	cb.addTerm(t3);	
	cb.solve();
	}
@Test
	public	void Test3()
	{
		ArrayList<VariableTerm> terms=new ArrayList<VariableTerm>(4);
		ArrayList<Term> term123=new ArrayList<Term>();
		CubicEquation cb=new CubicEquation(term123);
		VariableTerm t1 = new VariableTerm();
		t1.setCoefficient(-1);
		t1.setPower(1);
		t1.setVar('k');
		terms.add(t1);
		VariableTerm t2 = new VariableTerm();
		t2.setCoefficient(0);
		t2.setPower(2);
		t2.setVar('k');
		terms.add(t2);
		VariableTerm t3 = new VariableTerm();
		t3.setCoefficient(1);
		t3.setPower(3);
		t3.setVar('k');
		terms.add(t3);
		
	cb.addTerm(t2);
	cb.addTerm(t1);
	cb.addTerm(t3);	
	cb.solve();
	}

}
